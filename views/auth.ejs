<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" type="text/css" />
    <title>Login to AI Chat Bot Maker</title>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'DM Sans', sans-serif;
        }
    </style>
    <script src="https://www.gstatic.com/firebasejs/4.8.1/firebase.js"></script>
</head>

<body class="bg-slate-100">
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div
            class="sm:mx-auto sm:w-full sm:max-w-sm  bg-white p-4 justify-center flex align-middle flex-col gap-4 shadow-md rounded-lg">
            <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600"
                alt="ChatBot" />
            <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">
                Sign in to your account
            </h2>

            <div class="sm:mx-auto sm:w-full sm:max-w-sm">
                <div class="space-y-6">
                    <div>
                        <button
                            class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
                            onclick="loginWithGoogle()">
                            Login With Google
                        </button>
                    </div>
                    <!-- Helper -->
                    <div class="text-center">
                        <!-- Helper text -->

                        <a href="/integration" class="text-green-800 text-sm font-medium text-center underline">
                            View How This Works
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="/auth/app.js">
</script>

</html>